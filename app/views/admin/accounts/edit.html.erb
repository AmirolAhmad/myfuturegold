<%= form_for :account, url: admin_account_path(@account), method: :patch do |f| %>

	<div class="form-group">
    <%= f.label :login %><br>
    <%= f.text_field :login, :class => "form-control" %>
  </div>

  <div class="form-group">
  <%= f.fields_for :profile, @account.profile do |profile| %>
	  <%= profile.label :nama_penuh %><br>
	  <%= profile.text_field :nama_penuh, :class => "form-control" %>
	<% end %>
	</div>

  <div class="form-group">
    <%= f.submit "Save", :class => "btn btn-primary" %>
  </div>

<% end %>

