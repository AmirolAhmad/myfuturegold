<%= form_for :user, url: admin_user_path(@user), method: :patch do |f| %>

	<div class="form-group">
    <%= f.label :login %><br>
    <%= f.text_field :login, :class => "form-control" %>
  </div>

  <%= f.fields_for :profile_attributes, @user.profile do |profile| %>

  <div class="form-group">
	  <%= profile.label :nama_penuh %><br>
	  <%= profile.text_field :nama_penuh, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= profile.label :tel_num %><br>
    <%= profile.text_field :tel_num, :class => "form-control" %>
  </div>
	
  <% end %>

  <div class="form-group">
    <%= f.submit "Save", :class => "btn btn-primary" %>
    <%= link_to 'Back', admin_master_path, :class => "btn btn-link" %>
  </div>

<% end %>

