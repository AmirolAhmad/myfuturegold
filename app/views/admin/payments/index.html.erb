<div class="page-header">
  <h1>Payment History <small>Manage <%= @user.login %> payment here.</small></h1>
</div>

<div class="row">
  <div class="col-md-4">
    <%= render partial: "sidebar" %>
  </div>
  <div class="col-md-8">
    <!-- Client Details -->
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Payment History <%= link_to 'Add Payment', new_admin_user_payment_path, :class => "pull-right btn btn-primary btn-xs", :style => "color:#ffffff;" %></h3>
      </div>
      <div class="panel-body">
    
        <div class="table-responsive">
          <table class="table table-bordered table-hover" id="paymentList">
            <thead>
              <tr>
                <th class="col-md-2">Receipt Number</th>
                <th class="col-md-2">Payment Date</th>
                <th class="col-md-2">Order Number</th>
                <th class="col-md-1">Status</th>
                <th class="col-md-1">Action</th>
              </tr>
            </thead>
            <tbody>
              <% @payments.each do |payment| %>
              <tr>
                <td><%= payment.receipt_number %></td>
                <td><%= payment.payment_date %></td>
                <td>#<%= payment.order.ref_number %></td>
                <td>
                  <% if payment.status == "Paid" %>
                  <span class="label label-primary">
                    <%= payment.status %>
                  </span>
                  <% elsif payment.status == "Cancel" %>
                  <span class="label label-default">
                    <%= payment.status %>
                  </span>
                  <% else %>
                  <span class="label label-danger">
                    <%= payment.status %>
                  </span>
                  <% end %>
                </td>
                <td>
                  <div class="btn-group btn-group-xs">
                  <%= link_to 'View', admin_user_payment_path(id:payment), :class => "btn btn-default" %>
                  </div>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>

      </div>
      <div class="panel-footer">
        <%= link_to "Back", admin_users_path, :class => "btn btn-default" %>
      </div>
    </div>

  </div>
</div>

<script type="text/javascript">
$(document).ready( function () {
    $('#paymentList').DataTable();
} );
</script>