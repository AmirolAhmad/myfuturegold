<div class="page-header">
  <h1>Voucher History <small>Manage <%= @user.login %> paymvoucherent here.</small></h1>
</div>

<div class="row">
  <div class="col-md-4">
    <%= render partial: "sidebar" %>
  </div>
  <div class="col-md-8">
    <!-- Client Details -->
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          Voucher History
          <div class="pull-right btn-group btn-group-xs">
            <%= link_to 'Edit', edit_admin_user_voucher_path, :class => "btn btn-primary", :style => "color:#ffffff;" %>
            <%= link_to 'Delete', admin_user_voucher_path, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger", :style => "color:#ffffff;" %>
          </div>
        </h3>
      </div>
      <div class="panel-body">
    
        <div class="row">
          <div class="col-md-6">
            <label>Voucher Receipt Number</label>
            <p><%= @voucher.receipt_number %></p>
          </div>
          <div class="col-md-6">
            <label>Date of Voucher</label>
            <p><%= @voucher.voucher_date %></p>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <label>Voucher Method</label>
            <p><%= @voucher.method %></p>
          </div>
          <div class="col-md-6">
            <label>Total Voucher</label>
            <p>RM <%= @voucher.total_payment %></p>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <label>Voucher For (Order Ref Number)</label>
            <p>#<%= @voucher.order.ref_number %></p>
          </div>
          <div class="col-md-6">
            <label>Package Name</label>
            <p><%= @voucher.order.package.package_name %></p>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <label>Voucher Status</label>
            <p>
              <% if @voucher.status == "Paid" %>
              <span class="label label-primary">
                <%= @voucher.status %>
              </span>
              <% elsif @voucher.status == "Cancel" %>
              <span class="label label-default">
                <%= @voucher.status %>
              </span>
              <% else %>
              <span class="label label-danger">
                <%= @voucher.status %>
              </span>
              <% end %>
            </p>
          </div>
        </div>

      </div>
      <div class="panel-footer">
        <%= link_to "Back", admin_user_vouchers_path, :class => "btn btn-default" %>
      </div>
    </div>

  </div>
</div>