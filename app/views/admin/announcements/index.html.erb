<div class="page-header">
  <h1>Announcement <small>Create broadcast message.
  <%= link_to 'Broadcast Message', new_admin_announcement_path, :class => 'btn btn-default btn-xs' %>
  </small></h1>
</div>

<div class="table-responsive">
  <table class="table table-bordered table-hover" id="inboxAnnouncement">
    <thead>
      <tr>
        <th>Subject</th>
        <th class="col-md-3">By</th>
        <th class="col-md-2">Action</th>
      </tr>
    </thead>
    <tbody>
      <% @announcements.each do |announcement| %>
      <tr>
        <td><%= announcement.subject %></td>
        <td><%= announcement.user.profile.try(:nama_penuh) %></td>
        <td>
          <div class="btn-group btn-group-xs">
          <%= link_to admin_announcement_path(announcement), :class => "btn btn-default", "data-toggle" => "tooltip", :title => "Read this announcement" do %>
            <span class="glyphicon glyphicon-eye-open"></span>
          <% end %>
          <%= link_to edit_admin_announcement_path(announcement), :class => "btn btn-info", "data-toggle" => "tooltip", :title => "Edit this announcement" do %>
            <span class="glyphicon glyphicon-edit"></span>
          <% end %>
          <%= link_to admin_announcement_path(announcement), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger", "data-toggle" => "tooltip", :title => "Remove this announcement" do %>
            <span class="glyphicon glyphicon-remove"></span>
          <% end %>
          </div>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<script type="text/javascript">
$(document).ready( function () {
    $('#inboxAnnouncement').DataTable();
} );
</script>




