<div class="page-header">
  <h1>Message <small>from <%= @inbox.user.profile.nama_penuh %>. <%= link_to 'Back to Inbox', admin_inboxes_path, :class => 'btn btn-primary btn-xs' %></small></h1>
</div>

<div class="row">
  <div class="col-md-3">
    <div class="form-group">
      <label>Ticket ID</label>
      <p class="form-control-static"><%= @inbox.ticket_id %></p>
    </div>
  </div>
  <div class="col-md-3">
    <div class="form-group">
      <label>Status</label>
      <p class="form-control-static"><%= @inbox.status %></p>
    </div>
  </div>
  <div class="col-md-3">
    <div class="form-group">
      <label>Category</label>
      <p class="form-control-static"><%= @inbox.category %></p>
    </div>
  </div>
  <div class="col-md-3">
    <div class="form-group">
      <label>Date Created</label>
      <p class="form-control-static"><%= @inbox.created_at.strftime("%d %B %Y") %></p>
    </div>
  </div>
</div>  

<div class="form-group">
  <label>Subject</label>
  <p class="form-control-static"><%= @inbox.subject %></p>
</div>

<hr>

<div class="form-group">
  <label>Messages</label>
  <p class="form-control-static"><%= @inbox.description %></p>
</div>

<hr>

<%= form_for :inbox, url: reply_admin_inbox_path, method: :post do |f| %>
  <div class="form-group">
    <%= f.text_area :description, :class => "form-control", :rows => 5 %>
  </div>

  <div class="form-group">
    <%= f.submit "Reply", :class => "btn btn-primary" %>
  </div>
<% end %>