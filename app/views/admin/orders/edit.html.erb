<div class="page-header">
  <h1>Edit Order <small>Edit order #<%= @order.ref_number %> for <%= @user.login %> here.</small></h1>
</div>

<div class="row">
  <div class="col-md-4">
    <%= render partial: "sidebar" %>
  </div>
  <%= form_for :order, url: admin_user_order_path, method: :patch do |f| %>

  <div class="col-md-8">
    <!-- Client Details -->
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Order Details</h3>
      </div>
      <div class="panel-body">

        <% if @order.errors.any? %>
        <div class="alert alert-danger alert-dismissable">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          <strong><%= pluralize(@order.errors.count, "error") %> prohibited
            this order from being saved:</strong>
            <ul>
              <% @order.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
              <% end %>
            </ul>
        </div>
        <% end %>
    
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <%= f.label :gram_quantity, "Total Weight (gram)" %>
              <%= f.text_field :gram_quantity, :class => "form-control" %>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <%= f.label :price, "Price per gram (RM)" %><br>
              <%= f.text_field :price, :class => "form-control" %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <%= f.label :discount_id, "Recurring Payment Date" %>
              <p class="small"><%= link_to "More info", "", "data-toggle" => "modal", "data-target" => "#discount-info" %></p>
              <%= f.collection_select(:discount_id, Discount.all, :id, :discount_date, {}, {:class => "form-control"}) %>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <%= f.label :package_id, "Package" %>
              <p class="small"><%= link_to "More info", "", "data-toggle" => "modal", "data-target" => "#package-info" %></p>
              <%= f.collection_select(:package_id, Package.all, :id, :package_name, {}, {:class => "form-control"}) %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <%= f.label :status_id, "Status" %>
              <%= f.collection_select(:status_id, Status.all, :id, :status_name, {}, {:class => "form-control"}) %>
            </div>
          </div>
        </div>

      </div>
      <div class="panel-footer">
        <div class="form-group">
          <%= f.submit "Save", :class => "btn btn-primary" %>
          <%= link_to 'Cancel', admin_user_order_path, :class => "btn btn-link" %>
        </div>
      </div>
    </div>

  </div>
  <% end %>
</div>

