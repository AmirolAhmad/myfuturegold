<h5>admin/orders/edit.html.erb</h5>

<%= form_for :order, url: admin_user_order_path, method: :patch do |f| %>

<div class="form-group">
	<label>Full Name</label>
  <p><%= @order.user.profile.nama_penuh %></p>
</div>

<div class="form-group">
  <%= f.label :gram_quantity, "Quantity per Gram" %>
  <%= f.text_field :gram_quantity, :class => "form-control" %>
</div>

<div class="form-group">
  <%= f.label :price, "Price" %><br>
  <%= f.text_field :price, :class => "form-control" %>
</div>

<div class="form-group">
	<%= f.label :status_id, "Status" %>
	<%= f.collection_select(:status_id, Status.all, :id, :status_name, {}, {:class => "form-control"}) %>
</div>

<div class="form-group">
  <%= f.submit "Save", :class => "btn btn-primary" %>
  <%= link_to 'Back', admin_user_orders_path, :class => "btn btn-link" %>
</div>

<% end %>