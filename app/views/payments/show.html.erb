<div class="page-header">
  <h1>Payment Details <small>View payment <%= @payment.receipt_number %>.</small></h1>
</div>

<div class="row">
  <div class="col-md-4">
    <%= render partial: "sidebar" %>
  </div>

  <div class="col-md-8">
    <!-- Payment Details -->
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Order Payment</h3>
      </div>
      <div class="panel-body">
    
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
            	<label>Receipt Number</label>
              <p><%= @payment.receipt_number %></p>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
            	<label>Date of Payment</label>
              <p><%= @payment.payment_date %></p>
            </div>
          </div>
        </div>
    
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
            	<label>Payment Method</label>
              <p><%= @payment.method %></p>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
            	<label>Total Payment</label>
              <p>RM <%= @payment.total_payment %></p>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
            	<label>Payment For (Order Number)</label>
              <p><%= @payment.order.ref_number %></p>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label>Programme Name</label>
              <p><%= @payment.order.package.package_name %></p>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
            	<label>Payment Status</label>
              <p>
                <% if @payment.status == "Paid" %>
                <span class="label label-primary">
                  <%= @payment.status %>
                </span>
                <% elsif @payment.status == "Cancel" %>
                <span class="label label-default">
                  <%= @payment.status %>
                </span>
                <% else %>
                <span class="label label-danger">
                  <%= @payment.status %>
                </span>
                <% end %>
              </p>
            </div>
          </div>
        </div>

      </div>
      <div class="panel-footer">
        <%= link_to "Download Invoice", payment_path(@payment.id, :format => "pdf"), :class => "btn btn-primary", :target => "_blank" %>
        <%= link_to 'Back', payments_path, :class => "btn btn-default" %>
      </div>
    </div>

  </div>
</div>