<div class="page-header">
  <h1><center>Login  <small>to manage your account details.</small></center></h1>
</div>

<div class="col-md-4 col-md-offset-4">
	<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
	<div class="form-group">
    <div class="input-group">
      <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
      <%= f.text_field :login, autofocus: true, :class => "form-control", :placeholder => "Username or Email Address" %>
    </div>
  </div>
  <div class="form-group">
    <div class="input-group">
      <div class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></div>
      <%= f.password_field :password, autocomplete: "off", :class => "form-control", :placeholder => "Password" %>
    </div>
  </div>
  <% if devise_mapping.rememberable? -%>
  <div class="checkbox">
    <label>
      <%= f.check_box :remember_me %> Remember me for 2 weeks
    </label>
  </div>
  <% end -%>

  <%= f.submit "Sign in", :class => 'btn btn-primary btn-block' %>
	<% end %>
	<hr>

	<%= render "devise/shared/links" %>
</div>

