<div class="page-header">
  <h1>Edit Account Details</h1>
</div>

<div class="row">
  <div class="col-md-4">
    <div class="list-group">
      <%= link_to "Account Details", edit_user_registration_path, :class => 'list-group-item active' %>
      <%= link_to "Client Details", account_path, :class => 'list-group-item' %>
      <a href="#" class="list-group-item">Order Details</a>
      <a href="#" class="list-group-item">Porta ac consectetur ac</a>
      <a href="#" class="list-group-item">Vestibulum at eros</a>
    </div>
  </div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <div class="col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Account Details</h3>
      </div>
      <div class="panel-body">
      <%= devise_error_messages! %>

        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <%= f.label :login, "Username" %>
              <%= f.text_field :login, :class => "form-control", autofocus: true %>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <%= f.label :email, "Email address" %>
              <%= f.email_field :email, :class => "form-control" %>
            </div>
          </div>
        </div>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
            Currently waiting confirmation for: <%= resource.unconfirmed_email %>
            </div>
          </div>
        </div>
        <% end %>
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <%= f.label :password, "New Password" %>
              <%= f.password_field :password, :class => "form-control", autocomplete: "off" %>
              <small>(leave blank if you don't want to change it)</small>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <%= f.label :password_confirmation, "New Password Confirmation" %>
              <%= f.password_field :password_confirmation, :class => "form-control", autocomplete: "off" %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <%= f.label :current_password, "Current Password" %>
              <%= f.password_field :current_password, :class => "form-control", autocomplete: "off" %>
              <small>(we need your current password to confirm your changes)</small>
            </div>
          </div>
        </div>

      </div>
      <div class="panel-footer">
        <%= f.submit "Update", :class => 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
    <div class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title">Cancel my account</h3>
      </div>
      <div class="panel-body">
        <p>If you are unhappy with our service, you may cancel your account here. Don't forget that you can restore your account back anytime you want.</p>
        <%= button_to "Cancel my account", registration_path(resource_name), :class => 'btn btn-danger', data: { confirm: "Are you sure?" }, method: :delete %>
      </div>
    </div>
  </div>
</div>